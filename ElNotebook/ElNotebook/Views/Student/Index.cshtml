@{
}
<div class="cources_box">
    <h2>Список курсов</h2>
    <table class="table">
        <tr><th>Название курса</th><th>Количество часов</th> <th></th><th></th><th></th></tr>
        @foreach (var item in Model.Item1)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CountOFhours</td>
                <td>
                   <a asp-action="CourseDetails" asp-controller="Student" asp-route-id="@item.Id">Детали</a>
                </td>
                <td>
                     <a asp-action="SubscribeOnCourse" asp-controller="Student" asp-route-id="@item.Id">Подписаться</a>
                </td>
                <td>
                     <a asp-action="UnSubscribeOnCourse" asp-controller="Student" asp-route-id="@item.Id">Отписаться</a>
                </td>
            </tr>
        }
    </table>
</div>
<div class="student_box">
    здесь будут кнопки !)<br/>
    добро пожаловать уважаемый @Model.Item2?.Name <br/>
    <a asp-action="EditUserProfile" asp-controller="Student" asp-route-id="@Model.Item2?.UserId">Редактировать профиль пользователя</a><br/>
    <a asp-action="EditStudentProfile" asp-controller="Student" asp-route-id="@Model.Item2?.Id">Редактировать профиль студента</a><br/>
    <a asp-action="ShowActiveCourse" asp-controller="Student">Показать активные курсы</a><br />
    <a asp-action="ShowClosedCourse" asp-controller="Student">Показать законченные курсы</a><br />
</div>