@model Course

@{
    ViewData["Title"] = "Edit course page";
}

<div>
    <h2>Редактирвоание курса</h2>
    <form asp-action="EditCourse" asp-controller="manager" asp-route-id="@Model.Id">
        <p>
            <label asp-for="Name">Название курса</label><br />
            <input type="text" asp-for="Name" />
        </p>
        <p>
            <label asp-for="Author">Автор курса</label><br />
            <input type="text" asp-for="Author" />
        </p>
        <p>
            <label asp-for="CountOFhours">Количество часов</label><br />
            <input type="number" asp-for="CountOFhours" />
        </p>
        <p>
            <label asp-for="Description">Описание</label><br />
            <textarea asp-for="Description"></textarea>
        </p>
        <p>
            <input type="submit" value="Изменить" />
        </p>
    </form>
</div>